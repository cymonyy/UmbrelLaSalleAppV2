<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:src="@drawable/general_josh_umbrellasalle_logo" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/line_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStudentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="Students"
                android:textAlignment="center"
                android:textColor="#892AB6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvItemsInventoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/lato"
                android:onClick="openItemsInventory"
                android:text="Items Inventory"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTransactionsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/lato"
                android:onClick="openTransactionsPage"
                android:text="Transactions"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tlAdminStudentsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingStart="15sp"
            android:paddingEnd="15sp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_column="0"
                    android:background="@drawable/general_table_border"
                    android:padding="8dp"
                    android:text="ID"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="1"
                    android:background="@drawable/general_table_border"
                    android:padding="8dp"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>
            <!--            <TableRow-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:gravity="center"-->
            <!--                >-->

            <!--                <TextView-->
            <!--                    android:layout_column="0"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:text="VGjf84yBxsNmgcoaVSWWzVmTB3i1"-->
            <!--                    android:padding="8dp"-->
            <!--                    android:textAlignment="center"-->
            <!--                    android:background="@drawable/general_table_border"/>-->

            <!--                <TextView-->
            <!--                    android:layout_column="1"-->
            <!--                    android:text="Cymon Nadela"-->
            <!--                    android:padding="8dp"-->
            <!--                    android:textAlignment="center"-->
            <!--                    android:background="@drawable/general_table_border"/>-->
            <!--            </TableRow>-->
        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>